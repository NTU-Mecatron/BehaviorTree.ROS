<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="bt_task2">
    <Sequence>
      <PrintValue message="12"/>
      <OnYolo timeout="60000"
              service_name="on_yolo"/>
      <CenterMoveDown timeout="100000"
                      server_name="center_movedown"/>
      <CenterMoveUp timeout="100000"
                    server_name="center_moveup"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="CenterMoveDown">
      <input_port name="timeout"
                  default="500"
                  type="unsigned int">timeout to connect (milliseconds)</input_port>
      <input_port name="server_name"
                  type="std::string">name of the Action Server</input_port>
    </Action>
    <Action ID="CenterMoveUp">
      <input_port name="timeout"
                  default="500"
                  type="unsigned int">timeout to connect (milliseconds)</input_port>
      <input_port name="server_name"
                  type="std::string">name of the Action Server</input_port>
    </Action>
    <Action ID="OnYolo">
      <input_port name="timeout"
                  default="100"
                  type="unsigned int">timeout to connect to server (milliseconds)</input_port>
      <input_port name="service_name"
                  type="std::string">name of the ROS service</input_port>
    </Action>
    <Action ID="PrintValue">
      <input_port name="message"
                  type="int"/>
    </Action>
  </TreeNodesModel>

</root>
