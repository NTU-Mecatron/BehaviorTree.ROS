<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="bt_task2">
    <Sequence>
      <!-- <PrintValue message="10"/> -->

      <Delay delay_msec="5000">
        <OnYolo     timeout="100000"
                    service_name="on_yolo"/>
      </Delay>
      <ObjectSearch timeout="500000"
                    server_name="object_search"/>
      <Delay delay_msec="13000">
        <Center     timeout="500000"
                    server_name="center"/>
      </Delay>
      <MoveDown     timeout="500000"
                    server_name="center"/>
      <MoveUp       timeout="500000"
                    server_name="center"/>
      <!-- TODO: Implement Service for MoveArm -->
      <MoveArm      timeout="500000"
                    service_name="move_arm"/>
      <Gripper      timeout="500000"
                    service_name="pixhawk/gripper_service"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Action ID="Center">
      <input_port name="timeout"
                  default="500"
                  type="unsigned int">timeout to connect (milliseconds)</input_port>
      <input_port name="server_name"
                  type="std::string">name of the Action Server</input_port>
    </Action>

    <Action ID="OnYolo">
      <input_port name="timeout"
                  default="100"
                  type="unsigned int">timeout to connect to server (milliseconds)</input_port>
      <input_port name="service_name"
                  type="std::string">name of the ROS service</input_port>
    </Action>
    
    <Action ID="ObjectSearch">
      <input_port name="timeout"
                  default="500"
                  type="unsigned int">timeout to connect (milliseconds)</input_port>
      <input_port name="server_name"
                  type="std::string">name of the Action Server</input_port>
    </Action>
    
    <Action ID="MoveDown">
      <input_port name="timeout"
                  default="500"
                  type="unsigned int">timeout to connect (milliseconds)</input_port>
      <input_port name="server_name"
                  type="std::string">name of the Action Server</input_port>
    </Action>
    
    <Action ID="MoveUp">
      <input_port name="timeout"
                  default="500"
                  type="unsigned int">timeout to connect (milliseconds)</input_port>
      <input_port name="server_name"
                  type="std::string">name of the Action Server</input_port>
    </Action>
    
    <Action ID="MoveArm">
      <input_port name="timeout"
                  default="100"
                  type="unsigned int">timeout to connect to server (milliseconds)</input_port>
      <input_port name="service_name"
                  type="std::string">name of the ROS service</input_port>
    </Action>
    
    <Action ID="Gripper">
      <input_port name="timeout"
                  default="100"
                  type="unsigned int">timeout to connect to server (milliseconds)</input_port>
      <input_port name="service_name"
                  type="std::string">name of the ROS service</input_port>
    </Action>
    
    <!-- <Action ID="PrintValue">
      <input_port name="message"
                  type="int"/>
    </Action> -->
  </TreeNodesModel>

</root>
